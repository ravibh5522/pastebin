# Pastebin Configuration
# Copy this file to .env and modify the values

# Security
SECRET_KEY=your-very-secret-key-change-this-in-production-make-it-long-and-random

# Database
DATABASE_URL=sqlite:///./data/pastes.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/pastebin
# For MySQL: DATABASE_URL=mysql://username:password@localhost/pastebin

# File Upload Limits
MAX_FILES=5
MAX_FILE_SIZE_MB=10

# Auto-cleanup
AUTO_DELETE_DAYS=5

# Server Configuration
HOST=0.0.0.0
PORT=8000

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 days

# CORS (if needed for API access)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Production Settings
DEBUG=false
RELOAD=false
